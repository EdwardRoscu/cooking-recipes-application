<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:id="mainGrid"
          fx:controller="org.tnh.controllers.SavedRecipesController"
          xmlns:fx="http://javafx.com/fxml"
          vgap="10" hgap="220">

    <GridPane id="buttonsGrid" GridPane.rowIndex="0" GridPane.columnIndex="0" vgap="10" hgap="10">
        <padding>
            <Insets top="25.0" bottom="25.0" left="25.0" right="25.0"/>
        </padding>
        <Button fx:id ="back_button" onAction="#handleBackAction" text="Back" alignment="TOP_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TableView fx:id="recipesTableView" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <columns>
                <TableColumn fx:id="recipeName" text="NAME" prefWidth="145"
                             resizable="false" sortable="false"/>
                <TableColumn fx:id="recipeCalories" text="CALORIES" prefWidth="145"
                             resizable="false" sortable="false"/>
                <TableColumn fx:id="recipeTime" text="TIME" prefWidth="145"
                             resizable="false" sortable="false"/>
                <TableColumn fx:id="recipeInstructions" text="INSTRUCTIONS" prefWidth="145"
                             resizable="false" sortable="false"/>
            </columns>
        </TableView>
    </GridPane>
</GridPane>
